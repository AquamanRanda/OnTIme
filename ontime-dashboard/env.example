# Ontime Dashboard Environment Variables
# Copy this file to .env.local and adjust values as needed

# Ontime Server Configuration
NEXT_PUBLIC_ONTIME_URL=https://ontime.alpha.theesports.club

# Optional: Custom WebSocket URL (auto-generated if not specified)
NEXT_PUBLIC_ONTIME_WS_URL=wss://ontime.alpha.theesports.club/ws

# Update Intervals (milliseconds)
NEXT_PUBLIC_TIMER_UPDATE_INTERVAL=100
NEXT_PUBLIC_DATA_REFRESH_INTERVAL=5000

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# UI Configuration
NEXT_PUBLIC_DEFAULT_TIME_FORMAT=24
NEXT_PUBLIC_THEME=dark 